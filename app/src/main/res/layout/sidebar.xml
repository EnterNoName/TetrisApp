<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/game_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="18sp"
            android:textColor="?colorOnPrimary"
            android:includeFontPadding="false"
            android:textAlignment="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNext1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:backgroundTint="?colorPrimaryVariant"
            app:contentPadding="4dp"
            android:elevation="8dp">
            <com.example.tetrisapp.ui.view.PieceView
                android:id="@+id/pvNext1"
                app:backgroundColor="?colorPrimaryVariant"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvNext2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:backgroundTint="?colorPrimaryVariant"
            android:elevation="8dp"
            app:contentPadding="4dp">

            <com.example.tetrisapp.ui.view.PieceView
                android:id="@+id/pvNext2"
                app:backgroundColor="?colorPrimaryVariant"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNext3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:backgroundTint="?colorPrimaryVariant"
            android:elevation="8dp"
            app:contentPadding="4dp">

            <com.example.tetrisapp.ui.view.PieceView
                android:id="@+id/pvNext3"
                app:backgroundColor="?colorPrimaryVariant"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNext4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:backgroundTint="?colorPrimaryVariant"
            android:elevation="8dp"
            app:contentPadding="4dp">

            <com.example.tetrisapp.ui.view.PieceView
                android:id="@+id/pvNext4"
                app:backgroundColor="?colorPrimaryVariant"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvHold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hold"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="18sp"
            android:textColor="?colorOnPrimary"
            android:includeFontPadding="false"
            android:textAlignment="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHold"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:backgroundTint="?colorPrimaryVariant"
            android:elevation="8dp"
            app:contentPadding="4dp">

            <com.example.tetrisapp.ui.view.PieceView
                android:id="@+id/pvHold"
                app:backgroundColor="?colorPrimaryVariant"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/background_game_value"
            android:fontFamily="@font/fira_sans_medium"
            android:textSize="16sp"
            android:includeFontPadding="false"
            tools:text="00000000"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/tvLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:text="@string/lines"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/background_game_value"
            android:fontFamily="@font/fira_sans_medium"
            android:textSize="16sp"
            android:includeFontPadding="false"
            tools:text="00000000"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:text="@string/level"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/background_game_value"
            android:fontFamily="@font/fira_sans_medium"
            android:textSize="16sp"
            android:includeFontPadding="false"
            tools:text="00000000"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/tvCombo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:text="@string/combo"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/combo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/background_game_value"
            android:fontFamily="@font/fira_sans_medium"
            android:textSize="16sp"
            android:includeFontPadding="false"
            tools:text="00000000"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:constraint_referenced_ids="tvNext,cvNext1,cvNext2,cvNext3,cvNext4,tvHold,cvHold,tvScore,score,tvLines,lines,tvLevel,level,tvCombo,combo"
            app:flow_verticalGap="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>